<div class="sign-in-form">
  <h2>Bon retour parmi nous !</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
    <div class="form-inputs-sign-in">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <div class="form-check-box-sign-in">
      <%= f.input :remember_me, label:"Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

</div>
<div class="devise-links">
  <p>
    Pas encore inscrit ?<br>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Nous rejoindre", new_registration_path(resource_name) %><br />
    <% end %>
  </p>

  <p>
    Mot de passe oublié ? <br>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Réinitialiser votre mot de passe", new_password_path(resource_name) %><br />
    <% end %>
  </p>
</div>
