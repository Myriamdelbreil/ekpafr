<div class="sign-in-form">
  <h2>Modifier mes informations</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

          <div class="c_form-inputs">
            <%= f.input :nom, label:"Nom",
                        required: true,
                        autofocus: true %>
            <%= f.input :prenom, label: "Prénom",
                        required: true,
                        autofocus: true %>
          </div>
          <div class="c_form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true %>
            <%= f.input :email_confirmation,
                        required: true,
                        autofocus: true %>
          </div>
          <div class="c_form-inputs">
            <%= f.input :password, label: "Mot de passe",
                        required: true,
                        hint: ("8 caractères minimum, au moins une lettre et un chiffre"),
                        "data-target": "toggle.unhide",
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirmez votre mot de passe",
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>
          <div class="c_form-inputs">
            <%= f.input :addresse, label: "Adresse",
                        autofocus: true %>
            <%= f.input :telephone, label: "Numéro de téléphone",
                        autofocus: true %>
          </div>
          <div class="c_form-inputs">
            <%= f.input :diplome, as: :select,
                        label: "Niveau d'études", :collection =>  User::DIPLOMES,
                        autofocus: true %>
            <%= f.input :site_connu, as: :select,
                        label: "Comment avez-vous connu notre site ?", collection: User::SITE_CONNU,
                        required: true,
                        autofocus: true %>
          </div>
          <div class="c_form-inputs">
            <%= f.input :photo, as: :file,
                        label:"Choisissez votre photo de profil" %>
            <div class="d-flex align-items-center">
              <%= f.check_box :newsletter,
                              required: true, class:"mx-3", checked_value: true, unchecked_value: false %>
              <%= f.label "Acceptez-vous de recevoir notre newsletter ?" %>
            </div>
          </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Valider vos informations" %>
    </div>
  <% end %>
</div>

<div class="devise-links">
  <p>
    Vous souhaitez supprimer votre compte ?
    <%= link_to "Me désinscrire", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
  </p>

  <p>
    <%= link_to "Retour à la page précédente", :back %>
  </p>

</div>
